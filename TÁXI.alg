algoritmo "TAXI"
// 21.03.2025
var
BANDEIRA: CARACTERE
VALOR,KM: REAL
N: CARACTER

inicio
REPITA
   ESCREVAL (" QUANTOS KM FOI PERCORRIDO : ")
   LEIA (KM)
   ESCREVAL ("QUAL FOI O TIPO DA BANDEIRA 1 OU 2 :")
   LEIA (BANDEIRA)
   SE  BANDEIRA= 1 ENTAO
      VALOR <- KM* 1.80
   FIMSE
   SE BANDEIRA= 2 ENTAO
      VALOR <- KM*2.30
   FIMSE
   ESCREVAL ("O VALOR DA CORIDA É :",VALOR )
   LEIA (N)
   LIMPATELA
ATE (N="N")

fimalgoritmo
